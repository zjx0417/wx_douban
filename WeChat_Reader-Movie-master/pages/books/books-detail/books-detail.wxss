/* pages/comment/comment.wxss */
/*1电影背景图片，虚化的效果*/
.detail-container{
  height:400rpx;
  filter:blur(30rpx);
  opacity:0.9;
}
/*2.加一个电影背景的遮罩层，显示在背景底层*/
.detail-mask{
  position: absolute;
  width:100%;
  height: 400rpx;
  background: #999;
  top:0;
  left:0;
  z-index: -1;
}
/*3.电影的详细信息*/
.detail-info{
  position: absolute;
  display: flex;
  top: 0;
  left: 0; 
  width: 100%;
  height: 400rpx;
  padding: 20px;
}
/*3.1左侧电影图片*/
.detail-img{
  width:280rpx;
  height:90%;
  margin-right:20rpx;
}
/*3.2右侧区域*/
.detail{
  flex-grow: 1;/*文字占满剩余空间*/
  line-height: 60rpx;
  color:aliceblue;
  font-size:24rpx;

}
/*评分*/
.detail-sc{
  color:coral;
  font-size:36rpx;
}
/*电影描述*/
.desc{
  padding:20px;
  font-size: 24rpx;
  color: #555;
}
/*图片预览*/
.comment-img{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
}